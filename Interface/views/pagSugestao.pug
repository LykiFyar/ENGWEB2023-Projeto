extends layout
block content
    .w3-card-4
        header.w3-container.w3-gray
            h1(style="color:blue-dark") Username: #{sugestao.Username}
            a.w3-bar-item.w3-button.w3-gray(href="/delete/sugestao/"+sugestao._id, style="margin-top: 10px") DELETE

        form#sugestaos.w3-container(style="padding-top:90px;padding-bottom:20px; ")
            fieldset 
                tr#campos
                    label#campos Assunto
                    input.w3-input.w3-round#descricao(type="text" value= sugestao.Assunto readonly)
                tr#campos
                    label#campos Data de Submissão:
                    input.w3-input.w3-round#descricao(type="text" value= sugestao['Data de Submissão'] readonly)
                tr#campos
                    label#campos Sugestão:         
                    input.w3-input.w3-round#descricao(type="textarea" value= sugestao.Sugestão readonly)
                a.w3-button.w3-gray.w3-mb-2(href="Javascript:history.go(-1)") RETURN

        footer.w3-container.w3-gray
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
