extends layout

block content
  .w3-card-4
    header.w3-container.w3-gray
      h1 Register Form
    form.w3-container(action="/register" method="POST", style="padding-top:30px;padding-bottom:20px;")
        fieldset 
            legend Credenciais: 
            label Username 
            input.w3-input(type="text" name="username")
            label Password 
            input.w3-input(type="password" name="password")
            label Name 
            input.w3-input(type="text" name="name")
            label E-mail 
            input.w3-input(type="text" name="email")
            label Filiation 
            input.w3-input(type="text" name="filiation")
            label Level 
            input.w3-input(type="text" name="level")
        input.w3-btn.w3-blue(type="submit" value="Send")
    footer.w3-container.w3-gray
        address Generated by NodeJs auth demo

