extends layout

block content
  .w3-card-4
    header.w3-bar.w3-wide.w3-card
      h1 Registar
      button#Action.w3-btn.w3-mb-2(type="submit" form="registo") CONFIRMAR
      a#Action.w3-btn.w3-mb-2(href="/acordaos") CANCELAR

    form#registo.w3-container(action="/register" method="POST", style="padding-top:90px; padding-bottom:20px")
        fieldset 
            label Username 
            input.w3-input(type="text" name="username")
            label Password 
            input.w3-input(type="password" name="password")
            label Name 
            input.w3-input(type="text" name="name")
            label E-mail 
            input.w3-input(type="email" name="email")
            label Filiation 
            input.w3-input(type="text" name="filiation")
            if isLogged && isAdmin
              p Type of User:
              input.w3-radio(type="radio" name="level" value="user" id="user" checked)
              label(for="user") User 
              input.w3-radio(type="radio" name="level" value="admin" id="admin")
              label(for="admin") Administrator 
              
            else
              input.w3-input(type="text" name="level" value="user")

    footer.w3-bar.w3-wide.w3-card
