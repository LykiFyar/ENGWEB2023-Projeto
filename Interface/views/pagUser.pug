extends layout
block content
    .w3-card-4
        header.w3-bar.w3-wide.w3-card
            h1(style="color:blue-dark") Perfil de #{user.username}
            //a#Action.w3-btn.w3-mb-2(href="/delete/sugestao/"+sugestao._id) LOGOUT
            a#Action.w3-btn.w3-mb-2(href="Javascript:history.go(-1)") VOLTAR

        form#sugestaos.w3-container(style="padding-top:90px;padding-bottom:20px; ")
            fieldset 
                tr#campos
                    label#campos Nome
                    input.w3-input.w3-round#descricao(type="text" value=user.name readonly)
                tr#campos
                    label#campos Email
                    input.w3-input.w3-round#descricao(type="text" value=user.email readonly)
                tr#campos
                    label#campos Filiação
                    input.w3-input.w3-round#descricao(type="text" value=user.filiation readonly)
                tr#campos
                    label#campos Nível
                    input.w3-input.w3-round#descricao(type="text" value=user.level readonly)
                tr#campos
                    label#campos Data de Registo         
                    input.w3-input.w3-round#descricao(type="text" value=user.dateCreated readonly)
                tr#campos
                    label#campos Acordãos Favoritos
                    table.w3-table.w3-hoverable
                        thead
                            tr 
                                th Id Processo
                                th Descrição 

                        each fav in user.favorites
                            tr(onclick=`loadProcesso(${fav._id})`) 
                                td #{fav._id}
                                td #{fav["note"]}


        footer.w3-bar.w3-wide.w3-card
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
