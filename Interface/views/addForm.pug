extends layout
block content
    .w3-card-4
        header.w3-container.w3-gray
            h2 Adicionar Acordão
        
        form.w3-container(method="POST" action="/add", style="padding-top:20px; padding-bottom:20px")
            fieldset
                legend Formulário
                label(style="display: none") ID *
                input.w3-input.w3-round(type="text" name="_id", value=id style="display: none")
                label Processo *
                input.w3-input.w3-round(type="text" name="Processo", required)
                label Data do Acordão *
                input.w3-input.w3-round(type="date" name="Data do Acordão", required) 
                label Relator *
                input.w3-input.w3-round(type="text" name="Relator", required) 
                label Tribunal *
                input.w3-input.w3-round(type="text" name="tribunal" required) 
                label Url *
                input.w3-input.w3-round(type="text" name="url" required) 
                label Descritores *
                textarea.w3-input.w3-round(name="Descritores" rows="3" required)
                .w3-container(style="display: flex; flex-direction: row")
                    input.w3-input.w3-round(type="text" id="novoDescritor" placeholder="Novo Descritor" style="width:80%; margin:10px").w3-left
                    button.w3-btn.w3-gray(type="button" onclick="adicionarDescritor()" style="width:20%; margin:10px").w3-right Adicionar             

                
                each c in campos
                    if !['_id','Processo','Data do Acordão','Relator','Descritores','tribunal','url'].includes(c)
                        label #{c}
                        if c.includes('Data')
                            input.w3-input.w3-round(type="date" name=c)
                        else if ['Decisão','Sumário','Decisão Texto Integral'].includes(c)
                            textarea.w3-input.w3-round(name=c)   
                        else
                            input.w3-input.w3-round(type="text" name=c)   
                button.w3-btn.w3-gray.w3-mb-2(type="submit" style="margin:5px") ADD
                a.w3-button.w3-gray.w3-mb-2(href="/acordaos") CANCEL
        footer.w3-container.w3-gray.w3-center
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
