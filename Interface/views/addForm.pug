extends layout
block content
    .w3-card-4
        header.w3-bar.w3-wide.w3-card
            h1 Adicionar Acordão
            button#Action.w3-btn.w3-mb-2(type="submit" form="add") CONFIRMAR
            a#Action.w3-btn.w3-mb-2(href="/acordaos") CANCELAR
    
        form#add.w3-container(method="POST" action="/add", style="padding-top:90px; padding-bottom:20px")
            fieldset
                label(style="display: none") ID *
                input#form.w3-input.w3-round(type="text" name="_id", value=id style="display: none")
                label Processo *
                input#form.w3-input.w3-round(type="text" name="Processo", required)
                label Data do Acordão *
                input#form.w3-input.w3-round(type="date" name="Data do Acordão", required) 
                label Relator *
                input#form.w3-input.w3-round(type="text" name="Relator", required) 
                label Tribunal *
                input#form.w3-input.w3-round(type="text" name="tribunal" required) 
                label Url *
                input#form.w3-input.w3-round(type="text" name="url" required) 
                label Descritores *
                textarea.w3-input.w3-round(name="Descritores" rows="3" required)
                .w3-container(style="display: flex; flex-direction: row")
                    input.w3-input.w3-round(type="text" placeholder="Novo Descritor" style="width:80%; margin:10px" id="novoDescritor").w3-left
                    button#Action.w3-btn.w3-mb-2(type="button" onclick="adicionarDescritor()" style="width:20%; margin:10px").w3-right Adicionar             

                
                each c in campos
                    if !['_id','Processo','Data do Acordão','Relator','Descritores','tribunal','url'].includes(c)
                        label #{c}
                        if c.includes('Data')
                            input#form.w3-input.w3-round(type="date" name=c)
                        else if ['Decisão','Sumário','Decisão Texto Integral'].includes(c)
                            textarea.w3-input.w3-round(name=c)   
                        else
                            input#form.w3-input.w3-round(type="text" name=c)   

        footer.w3-bar.w3-wide.w3-card
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
