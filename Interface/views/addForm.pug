extends layout
block content
    .w3-card-4
        header.w3-container.w3-teal
            h2 Adicionar Acordão
        
        form.w3-container(method="POST" action="/add")
            fieldset
                legend Formulário
                label Id *
                input.w3-input.w3-round(type="text" name="_id")
                label Processo *
                input.w3-input.w3-round(type="text" name="Processo", required)
                label Data do Acordão *
                input.w3-input.w3-round(type="date" name="Data do Acordão", required) 
                label Relator *
                input.w3-input.w3-round(type="text" name="Relator", required) 
                label Descritores *
                input.w3-input.w3-round(type="text" name="Descritores" required)             
                label Tribunal *
                input.w3-input.w3-round(type="text" name="tribunal" required) 
                label Url
                input.w3-input.w3-round(type="text" name="url") 
                
                each c in campos
                    if !['_id','Processo','Data do Acordão','Relator','Descritores','tribunal','url'].includes(c)
                        label #{c}
                        if c.includes('Data')
                            input.w3-input.w3-round(type="date" name=c)
                        else if ['Decisão','Sumário','Decisão Texto Integral'].includes(c)
                            textarea.w3-input.w3-round(name=c)   
                        else
                            input.w3-input.w3-round(type="text" name=c)   
            button.w3-btn.w3-teal.w3-mb-2(type="submit") Criar

        footer.w3-container.w3-teal
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023 - #[a(href="/acordaos") Voltar]
