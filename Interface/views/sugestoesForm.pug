extends layout
block content
    .w3-card-4
        header.w3-container.w3-gray
            h2 Sugerir Alterações no Site
        
        form.w3-container(method="POST" action="/add/sugestao" style="padding-top:30px;padding-bottom:20px;")
            fieldset
                legend Formulário
                label(style="display: none") ID *
                input.w3-input.w3-round(type="text" name="_id", value=id style="display: none")
                label(style="display: none") Tipo
                input.w3-input.w3-round(type="text" name="Tipo" style="display: none" value="site")
                label Assunto
                input.w3-input.w3-round(type="text" name="Assunto", required)
                label Sugestão
                input.w3-input.w3-round(type="textarea" name="Sugestão", required)             
                
                button.w3-btn.w3-gray.w3-mb-2(type="submit" style="margin:5px") SEND
                a.w3-button.w3-gray.w3-mb-2(href="/sugestoes") CANCEL
        footer.w3-container.w3-gray.w3-center
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
