extends layout
block content
    .w3-card-4
        header.w3-bar.w3-wide.w3-card
            h1 Sugerir Alterações no Site
            button#Action.w3-btn.w3-mb-2(type="submit" form="sugestao") CONFIRMAR
            a#Action.w3-btn.w3-mb-2(href="/acordaos") CANCELAR

        form#sugestao.w3-container(method="POST" action="/add/sugestao" style="padding-top:90px; padding-bottom:20px")
            fieldset
                legend Formulário
                label(style="display: none") ID *
                input.w3-input.w3-round(type="text" name="_id", value=id style="display: none")
                label(style="display: none") Tipo
                input.w3-input.w3-round(type="text" name="Tipo" style="display: none" value="site")
                label Assunto
                input.w3-input.w3-round(type="text" name="Assunto", required)
                label Sugestão
                input.w3-input.w3-round(type="textarea" name="Sugestão", required)             
                
        footer.w3-bar.w3-wide.w3-card
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
