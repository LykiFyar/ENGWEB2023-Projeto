extends layout
block content
  .w3-card-4
    header.w3-container.w3-teal
      table
        tr
          th 
            img(src='/images/favicon.ico', alt='Logo', style='width: 30px')
          th
            h1 Acordãos Portugueses
          th
            nav
                a.w3-btn.w3-right-align(href='login.pug') LOGIN
                a.w3-btn(href='faq.pug') FAQ   
    .w3-container
      table.w3-table-all
        tr
          th Processo
          th Data
          th Relator
          th Descritores
        each processo in processos
          tr
            td= processo.Processo
                a(href="/retrieveList/" + processo._id)
            td= processo['Data do Acordão']
            td= processo.Relator
            td= processo.Descritores
            if admin
                td
                    button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                        a(href="/retrieveList/" + processo._id) Edit
                    button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                        a(href="#") Delete
              
    footer.w3-container.w3-teal
      h5 Generated by shopList::EngWeb2023 in #{d}