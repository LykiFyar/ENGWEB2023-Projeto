extends layout
block content
    .w3-card-4
        header.w3-container.w3-gray
            h1(style="color:blue-dark") Acordão: #{acordao._id}
               
        form#acordaos.w3-container
            fieldset 
                tr#campos
                    label#campos Processo
                    input.w3-input.w3-round#descricao(type="number" value= acordao.Processo readonly)
                tr#campos
                    label#campos Data do Acordão:
                    input.w3-input.w3-round#descricao(type="date" value= acordao['Data do Acordão'] readonly)
                tr#campos
                    label#campos Relator:         
                    input.w3-input.w3-round#descricao(type="text" value= acordao.Relator readonly)
                tr#campos
                    label#campos Descritores:
                    input.w3-input.w3-round#descricao(type="text" value= acordao.Descritores readonly) 
                tr#campos
                    label#campos tribunal:
                    input.w3-input.w3-round#descricao(type="text" value= acordao.tribunal readonly)
                tr#campos
                    label#campos Url:
                    input.w3-input.w3-round#descricao(type="text" value= acordao.url readonly)
                each value, key in acordao
                    if value && !['_id','Processo','Data do Acordão','Relator','Descritores','tribunal','url'].includes(key)
                        tr#campos
                            label#campos #{key}:
                            input.w3-input.w3-round#descricao(type="text" value= value readonly)
                a.w3-bar-item.w3-button.w3-gray(href="/edit/"+acordao._id, style="margin-top: 10px") EDIT    
        footer.w3-container.w3-gray
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023 - #[a(href="/acordaos") Voltar]
