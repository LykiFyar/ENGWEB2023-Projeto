extends layout
block content
    .w3-card-4
        header.w3-bar.w3-wide.w3-card
            h1(style="color:blue-dark") Acordão
            a#Action.w3-btn.w3-mb-2(href="/edit/"+acordao._id) EDITAR
            a#Action.w3-btn.w3-mb-2(href="/delete/"+acordao._id) ELIMINAR
            button#Action.w3-btn.w3-mb-2(type="button" onclick="Javascript:history.go(-1)") VOLTAR

        form#acordaos.w3-container(style="padding-top:90px; padding-bottom:20px")
            fieldset 
                tr#campos
                    label#campos Processo
                    input#form.w3-input.w3-round(type="text" value= acordao.Processo readonly)
                tr#campos
                    label#campos Data do Acordão:
                    input#form.w3-input.w3-round(type="text" value= acordao['Data do Acordão'] readonly)
                tr#campos
                    label#campos Relator:         
                    input#form.w3-input.w3-round(type="text" value= acordao.Relator readonly)  
                tr#campos
                    label#campos tribunal:
                    each value, key in tribunais
                        if value == acordao.tribunal            
                            input#form.w3-input.w3-round(type="text" value= key readonly)
                tr#campos
                    label#campos Url:
                    input#form.w3-input.w3-round(type="text" value= acordao.url readonly)
                
                tr#campos
                    label#campos Descritores:
                    textarea.w3-input.w3-round(name="Descritores" rows="3" readonly)
                        each desc in acordao.Descritores
                            | #{'\n'+desc} 

                each value, key in acordao
                    if value && !['_id','Processo','Data do Acordão','Relator','Descritores','tribunal','url'].includes(key)
                        tr#campos
                            label#campos #{key}
                            if ['Decisão','Sumário','Decisão Texto Integral'].includes(key)
                                textarea.w3-input.w3-round(readonly) #{value}
                            else
                                input#form.w3-input.w3-round(type="text" value=value readonly)
    
        footer.w3-bar.w3-wide.w3-card
            h5 &COPY Generated by João Braga, Rafael Ferreira, Marta Sá :: EngWeb2023
