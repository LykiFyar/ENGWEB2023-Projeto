extends layout
block content
    .w3-card-4
    header.w3-container.w3-teal
        h1 ID Acordão: #{acordao._id}
        a.w3-bar-item.w3-button(href="/edit/"+acordao._id) EDIT
        a.w3-bar-item.w3-button(href="/delete/"+acordao._id) DELETE

    br          
    .w3-container.w3-padding
        h4 Processo: #{acordao.Processo}
        h4 Data do Acordão: #{acordao['Data do Acordão']}
        h4 Relator: #{acordao.Relator}
        h4 Descritores: #{acordao.Descritores}
        each value, key in tribunais
            if value == acordao.tribunal            
                h4 Tribunal: #{key}
        h4 Url: #{acordao.url}
        each value, key in acordao
            if value && !['_id','Processo','Data do Acordão','Relator','Descritores','tribunal','url'].includes(key)
                h4 #{key}: #{value}      

        //a.w3-button.w3-teal.w3-mb-2(href=prevUrl) RETURN
        a.w3-button.w3-teal.w3-mb-2(href="/acordaos") RETURN
    
    footer.w3-container.w3-teal.w3-center 
